<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:paddingLeft="12dip"
    android:paddingRight="9dip"
    android:paddingTop="3dip"
    android:paddingBottom="3dip">

    <ImageView
    	android:id="@+id/comment_listitem_userface"
      	style="@style/user_face_image"/>

	<LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_marginLeft="3dip"
        android:background="@drawable/comment_list_divider">

       	<TextView
       		android:id="@+id/comment_listitem_username"
    		android:layout_width="wrap_content"
           	android:layout_height="wrap_content"
            android:text="用户名"
       	    android:includeFontPadding="false"
           	android:textSize="@dimen/text_size_15"
            android:textColor="@color/listitem_blue"/>

	    <LinearLayout
			android:id="@+id/comment_listitem_refers"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_marginTop="5dip"
    		android:orientation="vertical"
    		android:background="@drawable/review_bg_blue">
    	</LinearLayout>

		<com.ihelpoo.app.widget.LinkView
			android:id="@+id/comment_listitem_content"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="3dip"
			android:textSize="@dimen/text_size_15"
            android:text="评论内容"
			android:textColor="@color/listitem_black_gray"
			android:textColorLink="@color/listitem_blue"
			android:autoLink="web|email"/>

		<LinearLayout
			android:id="@+id/comment_listitem_relies"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_marginTop="5dip"
    		android:orientation="vertical"
    		android:background="@drawable/review_bg_top">
    	</LinearLayout>

		<LinearLayout
	    	android:orientation="horizontal"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="3dip">
			<TextView
	        	android:id="@+id/comment_listitem_client"
	            android:layout_width="wrap_content"
	         	android:layout_height="wrap_content"
	         	android:layout_marginRight="10.0dip"
	         	android:textSize="@dimen/text_size_10"
	         	android:textColor="@color/listitem_gray"/>

	       	<TextView
	        	android:id="@+id/comment_listitem_date"
	            android:layout_width="wrap_content"
	         	android:layout_height="wrap_content"
	         	android:textSize="@dimen/text_size_10"
	         	android:textColor="@color/listitem_gray"/>
        </LinearLayout>

	</LinearLayout>

</LinearLayout> 
