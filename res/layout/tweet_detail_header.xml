<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	android:layout_width="fill_parent"
   	android:layout_height="wrap_content"
   	android:paddingLeft="10dip"
   	android:paddingRight="2dip"
   	android:gravity="center_vertical"
   	android:orientation="horizontal"
   	android:background="@drawable/head_bg">
   	<Button
   		android:id="@+id/tweet_detail_back"
	   	android:layout_width="wrap_content"
	   	android:layout_height="wrap_content"
	   	android:layout_gravity="left|center"
	   	android:clickable="true"
	   	android:background="@drawable/head_back"
        android:textColor="@color/listitem_white"
        android:width="50dip"
        android:paddingLeft="@dimen/space_10"
        android:paddingBottom="2dip"
        android:text="返回"/>
   	<TextView 
   	    android:id="@+id/tweet_detail_head_title"
   		style="@style/detail_head_title"
   		android:layout_gravity="center"
   		android:text="@string/tweet_detail_head_title"/>
   	<ProgressBar 
		android:id="@+id/tweet_detail_head_progress" 
		style="@style/loading_small"
		android:layout_gravity="right|center"
		android:layout_marginRight="22dip"/>
  	<ImageView 
   		android:id="@+id/tweet_detail_refresh"
	   	android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="right|center"
	   	android:clickable="true"
	   	android:background="@drawable/head_refresh"
        android:layout_marginRight="10dip"
        android:visibility="gone"/>
</FrameLayout>
