<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/graywhite">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2dip"
        android:paddingRight="2dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/head_bg">

        <Button
            android:id="@+id/user_intro_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:clickable="true"
            android:background="@drawable/head_back"
            android:textColor="@color/listitem_white"
            android:width="50dip"
            android:paddingLeft="@dimen/space_10"
            android:paddingBottom="2dip"
            android:text="取消" />

        <TextView
            style="@style/detail_head_title"
            android:layout_gravity="center"
            android:text="修改自我简介" />

        <ImageView
            android:id="@+id/user_intro_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:clickable="true"
            android:background="@drawable/head_refresh" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="15dip">

        <LinearLayout
            android:id="@+id/user_intro_lyt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="15dip"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/table_mid_bg">

            <EditText
                android:id="@+id/user_intro_intro"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/message_edit_bg"
                android:lines="3"
                android:padding="@dimen/space_5"
                android:autoLink="web"
                android:gravity="top"
                android:textSize="@dimen/space_15"
                android:textColor="#4d4948"
                android:text="修改自我简介" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
