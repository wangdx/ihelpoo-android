<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/nest_theme_header_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/nest_theme_header_bg"
            android:layout_width="match_parent"
            android:background="@drawable/nest_theme_default_bg"
            android:layout_height="@dimen/image_profile_headbg_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical" />

        <View
            android:id="@+id/nest_profile_hear_bottom"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_profile_headbottom_height"
            android:layout_below="@+id/nest_theme_header_bg"
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF" />

        <ImageView
            android:id="@+id/nest_profile_avartar"
            android:layout_width="@dimen/image_profile_avatar_size"
            android:layout_height="@dimen/image_profile_avatar_size"
            android:layout_alignBottom="@+id/nest_profile_hear_bottom"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_profile_avatar" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="15dip">

        <LinearLayout
            android:id="@+id/user_gender_female_lyt"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:gravity="center_vertical"
            android:padding="@dimen/space_5"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/table_above_bg">

            <ImageView
                android:id="@+id/news_listiterm_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:scaleType="fitCenter"
                android:src="@drawable/nest_my_trends" />

            <TextView
                android:id="@+id/user_nickname_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_10"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_16"
                android:text="我的动态"
                android:textColor="#ff000000" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:src="@drawable/widget_right_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_gender_male_lyt"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:gravity="center_vertical"
            android:padding="@dimen/space_5"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/table_mid_bg">

            <ImageView
                android:id="@+id/news_listiterm_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:scaleType="fitCenter"
                android:src="@drawable/nest_my_info" />

            <TextView
                android:id="@+id/user_nickname_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_10"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_16"
                android:text="我的资料"
                android:textColor="#ff000000" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:src="@drawable/widget_right_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_gender_female_lyt"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:padding="@dimen/space_5"
            android:gravity="center_vertical"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/table_mid_bg">

            <ImageView
                android:id="@+id/news_listiterm_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:scaleType="fitCenter"
                android:src="@drawable/nest_visit_school" />

            <TextView
                android:id="@+id/user_nickname_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_10"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_16"
                android:text="串校去"
                android:textColor="#ff000000" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:src="@drawable/widget_right_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_gender_female_lyt"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:padding="@dimen/space_5"
            android:gravity="center_vertical"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/table_below_bg">

            <ImageView
                android:id="@+id/news_listiterm_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:scaleType="fitCenter"
                android:src="@drawable/nest_trends_rank" />

            <TextView
                android:id="@+id/user_nickname_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_10"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_16"
                android:text="看看排行"
                android:textColor="#ff000000" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:src="@drawable/widget_right_icon" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/cut_line"
        android:layout_margin="0dip" />
</LinearLayout> 
