<?xml version="1" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main_relativelayout_header" 
  	android:layout_width="fill_parent" 
  	android:layout_height="40dip"
  	android:background="@drawable/head_bg">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/main_head_title"
            android:layout_centerVertical="true"
            style="@style/detail_head_title"
            android:text="首页"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/main_head_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dip"
        android:background="@drawable/frame_icon_search"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/main_head_pub_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dip"
        android:background="@drawable/frame_icon_post"/>

    <ImageButton
        android:id="@+id/main_head_pub_tweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dip"
        android:background="@drawable/frame_icon_tweet"
        android:visibility="gone"/>



    <ImageButton
        android:id="@+id/main_head_pub_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:visibility="gone"
        android:background="@drawable/frame_icon_refresh"/>

    <ProgressBar
        android:id="@+id/main_head_progress"
        style="@style/loading_small"
        android:layout_gravity="right|center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip"/>
</RelativeLayout>
